<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cyb_hover_config_form" model="ir.ui.view">
        <field name="name">cyb.hover.config.form</field>
        <field name="model">cyb.hover.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="model_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="field_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_cyb_hover_config_tree" model="ir.ui.view">
        <field name="name">cyb.hover.config.tree</field>
        <field name="model">cyb.hover.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="model_id"/>
                <field name="field_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="action_cyb_hover_config" model="ir.actions.act_window">
        <field name="name">Tooltip Configuration Many2one</field>
        <field name="res_model">cyb.hover.config</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_cyb_hover_config" 
              name="tooltip Hover Config" 
              parent="base.menu_custom" 
              action="action_cyb_hover_config" 
              sequence="100"/>
</odoo>
